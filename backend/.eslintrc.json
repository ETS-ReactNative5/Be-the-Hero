{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "comma-dangle": ["error", "always-multiline"],
        "indent": ["error", 2],
        "semi": "error",
        "quotes": ["error", "single"]
    },

    "settings": {
        "import/extensions": [".js", ".jsx", ".ts", ".tsx"]
    }
}
